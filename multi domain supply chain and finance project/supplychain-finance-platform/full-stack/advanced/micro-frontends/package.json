  "repository": {
    "type": "git",
    "url": "https://github.com/supply-chain/micro-frontends.git"
  },
  "keywords": [
    "micro-frontends",
    "module-federation",
    "single-spa",
    "supply-chain",
    "enterprise",
    "scalable",
    "architecture"
  ],
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm test"
    }
  }
}

