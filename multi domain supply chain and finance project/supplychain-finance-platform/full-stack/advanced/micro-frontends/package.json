{
  "name": "supply-chain-micro-frontends",
  "version": "1.0.0",
  "description": "Advanced Micro-Frontends Architecture for Supply Chain Platform",
  "main": "index.js",
  "scripts": {
    "start": "concurrently \"npm run start:shell\" \"npm run start:auth\" \"npm run start:supply\" \"npm run start:finance\" \"npm run start:analytics\"",
    "start:shell": "cd shell && npm start",
    "start:auth": "cd auth && npm start",
    "start:supply": "cd supply-chain && npm start",
    "start:finance": "cd finance && npm start",
    "start:analytics": "cd analytics && npm start",
    "build": "npm run build:shell && npm run build:auth && npm run build:supply && npm run build:finance && npm run build:analytics",
    "build:shell": "cd shell && npm run build",
    "build:auth": "cd auth && npm run build",
    "build:supply": "cd supply-chain && npm run build",
    "build:finance": "cd finance && npm run build",
    "build:analytics": "cd analytics && npm run build",
    "test": "npm run test:shell && npm run test:auth && npm run test:supply && npm run test:finance && npm run test:analytics",
    "test:shell": "cd shell && npm test",
    "test:auth": "cd auth && npm test",
    "test:supply": "cd supply-chain && npm test",
    "test:finance": "cd finance && npm test",
    "test:analytics": "cd analytics && npm test",
    "lint": "npm run lint:shell && npm run lint:auth && npm run lint:supply && npm run lint:finance && npm run lint:analytics",
    "lint:shell": "cd shell && npm run lint",
    "lint:auth": "cd auth && npm run lint",
    "lint:supply": "cd supply-chain && npm run lint",
    "lint:finance": "cd finance && npm run lint",
    "lint:analytics": "cd analytics && npm run lint",
    "dev": "concurrently \"npm run dev:shell\" \"npm run dev:auth\" \"npm run dev:supply\" \"npm run dev:finance\" \"npm run dev:analytics\"",
    "dev:shell": "cd shell && npm run dev",
    "dev:auth": "cd auth && npm run dev",
    "dev:supply": "cd supply-chain && npm run dev",
    "dev:finance": "cd finance && npm run dev",
    "dev:analytics": "cd analytics && npm run dev",
    "deploy": "npm run deploy:shell && npm run deploy:auth && npm run deploy:supply && npm run deploy:finance && npm run deploy:analytics",
    "deploy:shell": "cd shell && npm run deploy",
    "deploy:auth": "cd auth && npm run deploy",
    "deploy:supply": "cd supply-chain && npm run deploy",
    "deploy:finance": "cd finance && npm run deploy",
    "deploy:analytics": "cd analytics && npm run deploy"
  },
  "workspaces": [
    "shell",
    "auth",
    "supply-chain",
    "finance",
    "analytics"
  ],
