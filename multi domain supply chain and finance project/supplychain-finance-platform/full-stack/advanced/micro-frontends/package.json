    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.1.0",
    "cypress": "^13.5.0",
    "storybook": "^7.5.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.3.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/lodash": "^4.14.0",
    "@types/jest": "^29.5.0",
    "webpack-bundle-analyzer": "^4.10.1",
